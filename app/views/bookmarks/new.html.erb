<h1>Ajouter un film à la liste <%= @list.name %></h1>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <div class="form-group">
    <%= f.label :movie_id, "Choisir un film" %>
    <%= f.association :movie,
          collection: Movie.all,
          label_method: :title,
          value_method: :id,
          prompt: "Sélectionnez un film",
          input_html: { class: 'form-select' } %>
  </div>

  <div class="form-group mt-2">
    <%= f.label :comment, "Commentaire" %>
    <%= f.text_field :comment, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= f.submit "Ajouter le film", class: "btn btn-primary" %>
    <%= link_to "Retour à la liste", list_path(@list), class: "btn btn-link" %>
  </div>
<% end %>
