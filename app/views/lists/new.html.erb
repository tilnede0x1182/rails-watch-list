<h1>Créer une nouvelle liste</h1>

<%= simple_form_for @list do |f| %>
  <div class="form-group">
    <%= f.label :name, "Nom de la liste" %>
    <%= f.input :name, input_html: { class: 'form-control' } %>
  </div>

  <div class="mt-3">
    <%= f.submit "Créer", class: "btn btn-primary" %>
    <%= link_to "Retour", lists_path, class: "btn btn-link" %>
  </div>
<% end %>
